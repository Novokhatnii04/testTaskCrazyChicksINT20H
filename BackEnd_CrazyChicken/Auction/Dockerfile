#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 5073

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Auction/Auction_TestTaskCrazyChicken.csproj", "Auction/"]
RUN dotnet restore "./Auction/./Auction_TestTaskCrazyChicken.csproj"
COPY . .
WORKDIR "/src/Auction"
RUN dotnet build "./Auction_TestTaskCrazyChicken.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Auction_TestTaskCrazyChicken.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false


FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Auction_TestTaskCrazyChicken.dll"]